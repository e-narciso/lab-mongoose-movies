<h2 class="movies-head">Add a New Actor</h2>

<form
  action="/actors/creation"
  method="POST"
  style="width:500px; margin-left:100px"
>
  <div class="form-group">
    <label for="actorName">Name</label>
    <input
      type="text"
      class="form-control"
      id="actorName"
      aria-describedby="nameHelp"
      placeholder="Name"
      name="theName"
    />
  </div>
  <div class="form-group">
    <label for="actorQuote">Famous Quote</label>
    <textarea
      class="form-control"
      id="actorQuote"
      aria-describedby="quoteHelp"
      placeholder="Quote"
      name="theQuotee"
      rows="3"
    ></textarea>
  </div>
  <div class="form-group">
    <label for="actorImage">Image URL</label>
    <input
      type="text"
      class="form-control"
      id="actorImage"
      aria-describedby="imageHelp"
      placeholder="Headshot URL"
      name="theImage"
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
