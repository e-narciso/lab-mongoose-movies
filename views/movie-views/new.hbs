<h2 style="margin-left:100px">Add a New Film</h2>

<form
  action="/movies/creation"
  method="POST"
  style="width:500px; margin-left:100px"
>
  <div class="form-group">
    <label for="movieTitle">Title</label>
    <input
      type="text"
      class="form-control"
      id="movieTitle"
      aria-describedby="nameHelp"
      placeholder="Movie Title"
      name="theTitle"
    />
  </div>
  <div class="form-group">
    <label for="movieDirector">Director</label>
    <select class="form-control" id="movieDirector" name="theDirector">
      <option value="" selected disabled>Please Select One</option>

      {{#each allCelebs}}

      <option value="{{ this._id }}">{{ this.name }}</option>

      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="celebrityCatchPhrase">Famous Quote</label>
    <input
      type="text"
      class="form-control"
      id="celebrityCatchPhrase"
      aria-describedby="catchPhraseHelp"
      placeholder="Type Name Here"
      name="theGenre"
    />
  </div>
    <div class="form-group">
    <label for="moviePlot">Synopsis</label>
    <input
      type="text"
      class="form-control"
      id="moviePlot"
      aria-describedby="plotHelp"
      placeholder="Type Name Here"
      name="thePlot"
    />
  </div>
  <div class="form-group">
    <label for="movieImage">Poster URL</label>
    <input
      type="text"
      class="form-control"
      id="movieImage"
      aria-describedby="imageHelp"
      placeholder="Type Name Here"
      name="theImage"
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
