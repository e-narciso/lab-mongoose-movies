<h2 class="movies-head">Login to your account</h2>

<form action="/login" method="POST" style="width:500px; margin-left:100px">
  <div class="form-group">
    <label for="theUsername">Username</label>
    <input
      type="text"
      class="form-control"
      id="theUsername"
      aria-describedby="userHelp"
      placeholder="Enter your username"
      name="username"
    />
  </div>
    <div class="form-group">
    <label for="thePassword">Password</label>
    <input
      type="password"
      class="form-control"
      id="thePassword"
      aria-describedby="userHelp"
      placeholder="Enter your password"
      name="password"
    />
  </div>
  <button type="submit" class="btn btn-primary">Sign In</button>
{{#if errorMessage}}
<div class="error-message">{{errorMessage}}</div>
{{/if}}

  <p class="account-message" style="margin-top:10px">
    Don't have an account? <a href="/signup">Sign up</a>
  </p>
</form>

